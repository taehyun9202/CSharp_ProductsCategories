@model Product
<div class="jumbotron">
    <h3 style="display: inline-block;">Products</h3>
    <h3 style="display: inline-block;">|</h3>
    <h3 style="display: inline-block;"><a href="/categories">Categories</a></h3>
</div>
<div class="row">
    <div class="col col-sm-6">
        <partial name="AddProduct.cshtml"></partial>
    </div>
    <div class="col col-sm-6">
        <h2>Existing Products</h2>
        @foreach (var p in ViewBag.AllProducts)
        {
            <p><a href="product/@p.ProductId">@p.ProductName</a></p>
        }
    </div>
</div>