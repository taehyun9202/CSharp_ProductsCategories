@model Category
<div class="jumbotron">
    <h3 style="display: inline-block;"><a href="/">Products</a></h3>
    <h3 style="display: inline-block;">|</h3>
    <h3 style="display: inline-block;">Categories</h3>
</div>
<div class="row">
    <div class="col col-sm-6">
        <partial name="AddCategory.cshtml"></partial>
    </div>
    <div class="col col-sm-6">
        <h2>Existing Categories</h2>
        @foreach (var c in ViewBag.AllCategories)
        {
            <p><a href="category/@c.CategoryId">@c.CategoryName</a></p>
        }
    </div>
</div>